{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/GraphDevelopment/GraphProject/Server/backend_project/PythonServer/app.py",   // Path to your FastAPI app (adjust as necessary)
        "args": [
          "uvicorn",
          "app:app",  // This is the format for uvicorn (module:app object)
          "--host", "0.0.0.0",
          "--port", "8000",
          "--reload",
          "--debug"
        ],
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "console": "integratedTerminal"
      }
    ]
  }
  